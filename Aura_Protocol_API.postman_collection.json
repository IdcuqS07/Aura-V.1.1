          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/passport/score/0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb1",
              "host": ["{{BASE_URL}}"],
              "path": ["api", "passport", "score", "0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb1"]
